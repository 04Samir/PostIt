<%- include('partials/header', { title , name }) %>

    <body class="d-flex flex-column min-vh-100">
            <%- include('partials/navigation', { name , session }) %>

            <div class="container mt-4">
                <h2>Reply to Comment - <%= topic.name %>
                </h2>

                <% if (typeof message !=='undefined' && message !==null) { %>
                    <div class="alert alert-<%= message.type %>" role="alert">
                        <%= message.text %>
                    </div>

                    <% if (typeof message.redirect !=='undefined' ) { %>
                        <script>
                            setTimeout(function () {
                                window.location.href = '<%= message.redirect %>';
                            }, 3000);
                        </script>
                        <% } %>
                            <% } %>

                                <form
                                    action="/topics/<%= topic.name %>/posts/<%= post.id %>/comments/<%= comment.id %>/reply"
                                    method="POST">
                                    <div class="mb-3">
                                        <label for="content" class="form-label">Your Reply</label>
                                        <textarea class="form-control" id="content" name="content" rows="4"
                                            required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit Reply</button>
                                </form>
            </div>

            <%- include('partials/footer', { name }) %>
    </body>

    </html>