<%- include('partials/header', { title , name }) %>

    <body class="d-flex flex-column min-vh-100">
        <%- include('partials/navigation', { name , session }) %>

            <div class="container mt-4 mb-4">
                <h3>Search Results for "<%= query %>"</h3>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <h4>Topics</h4>
                        <div class="list-group">
                            <% if (topics.length> 0) { %>
                                <% topics.forEach(topic=> { %>
                                    <a href="<%= baseUrl %>/topics/<%= topic.id %>"
                                        class="list-group-item list-group-item-action">
                                        <%= topic.name %>
                                    </a>
                                <% }); %>
                            <% } else { %>
                                <p>No Topics Found</p>
                            <% } %>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h4>Posts</h4>
                        <div class="list-group">
                            <% if (posts.length> 0) { %>
                                <% posts.forEach(post=> { %>
                                    <a href="<%= baseUrl %>/topics/<%= post.topic_id %>/posts/<%= post.id %>"
                                        class="list-group-item list-group-item-action">
                                        <%= post.title %>
                                    </a>
                                <% }); %>
                            <% } else { %>
                                <p>No Posts Found</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('partials/footer', { name }) %>
    </body>

    </html>